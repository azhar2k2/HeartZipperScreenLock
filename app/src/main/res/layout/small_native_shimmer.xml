<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shimmerViewThe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:shimmer_auto_start="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/padding">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/padding">

                    <View
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="@dimen/padding"
                        android:background="@color/gray_400" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/firstT"
                            android:layout_width="@dimen/_120sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:background="@color/gray_400"
                            android:ellipsize="end"
                            android:lines="1"
                            android:singleLine="true"
                            android:text="@string/facebook_advertiser"
                            android:textColor="@color/gray_400"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/secondT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:background="@color/gray_400"
                            android:ellipsize="end"
                            android:lines="1"
                            android:singleLine="true"
                            android:text="@string/this_is_a_facebook_demo_ad"
                            android:textColor="@color/gray_400"
                            android:textSize="8sp" />


                        <TextView
                            android:id="@+id/thirdT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:background="@color/gray_400"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:lines="1"
                            android:singleLine="true"
                            android:text="@string/tour_ad_integration_works"
                            android:textColor="@color/gray_400"
                            android:textSize="8sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/gray_400"
                android:textColor="@android:color/white"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

</com.facebook.shimmer.ShimmerFrameLayout>
